<h1>Purchases</h1>
<table>
	<tr>
		<th>Image</th>
		<th>Date</th>
		<th>Name</th>
		<th>Buyer</th>
		<th>Seller</th>
	</tr>

	<% @orders.each do |order| %>
		<tr>
			<td><%= image_tag order.listing.image.url(:thumb) %></td>
			<td><%= order.created_at.strftime("%B %-d, %Y") %></td>
			<td><%= order.listing.name %></td>
			<td><%= order.buyer.name %></td>
			<td><%= order.seller.name %></td>
		</tr>
	<% end %>
</table>